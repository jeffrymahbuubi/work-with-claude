# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# API Keys
# ============================================

# Anthropic API Key (for Claude API)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (if using OpenAI services)
OPENAI_API_KEY=your_openai_api_key_here

# Other API keys
# SOME_API_KEY=your_api_key_here

# ============================================
# Database Configuration
# ============================================

# Database URL (example: PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database credentials (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password

# ============================================
# Application Configuration
# ============================================

# Environment (development, staging, production)
NODE_ENV=development

# Application port
PORT=3000

# Base URL
# BASE_URL=http://localhost:3000

# ============================================
# Authentication & Security
# ============================================

# JWT Secret
# JWT_SECRET=your_jwt_secret_here

# Session secret
# SESSION_SECRET=your_session_secret_here

# ============================================
# Third-Party Services
# ============================================

# Stripe (payment processing)
# STRIPE_SECRET_KEY=your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# SendGrid (email)
# SENDGRID_API_KEY=your_sendgrid_api_key

# AWS (cloud services)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Google Cloud
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# ============================================
# Development Tools
# ============================================

# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# MCP Server Configuration
# ============================================

# Context7 MCP Server API Key
CONTEXT7_API_KEY=your_context7_api_key_here

# Jupyter MCP Server Token
# Must match the token in scripts/start_jupyter_server.sh
JUPYTER_TOKEN=my_secure_token_123

# Transcript API Key (if using transcript-api MCP server)
# TRANSCRIPT_API_KEY=your_transcript_api_key_here

# ============================================
# Project-Specific Variables
# ============================================

# Add your project-specific environment variables here
# VARIABLE_NAME=value
